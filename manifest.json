{
    "manifest_version": 2,

    "name": "ReadItToMe",
    "description": "Reading is our passion",
    "version": "1.0",

    "icons": {
        "16": "imgs/16.png",
        "32": "imgs/32.png",
        "48": "imgs/48.png",
        "128": "imgs/128.png"
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": true
      },

      "browser_action": {
        "default_icon": "imgs/128.png"
      },

    "permissions": [
        "http://*/",
        "activeTab",
        "storage"
    ],

    "commands": {
        "Ctrl+M": {
            "suggested_key": {
                "default": "Ctrl+M",
                "mac": "Command+M"
            },
            "description": "Ctrl+M."
        }
    }
}